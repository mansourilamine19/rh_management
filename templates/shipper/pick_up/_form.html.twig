{#{{ form_start(form) }}
{{ form_widget(form) }}
<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}#}

{% if pick_up.printed == true and app.user.role == 'ROLE_SHIPPER' %}
    <div class="alert alert-success text-center">
        Le colis est imprimé, impossible de le modifié !!!
    </div>
{% else %}
    {{ form_start(form) }}
